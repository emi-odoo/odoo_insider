<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="olympics_olympics_view_form" model="ir.ui.view">
        <field name="name">olympics.olympics.view.form</field>
        <field name="model">olympics.olympics</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="olympics_type"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="country_id"/>
                    </group>
                    <group>
                        <field name="event_ids">
                            <list editable="bottom">
                                <field name="name"/>
                                <field name="datetime_start"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="olympics_olympics_view_list" model="ir.ui.view">
        <field name="name">olympics.olympics.view.list</field>
        <field name="model">olympics.olympics</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="country_id"/>
            </list>
        </field>
    </record>
    <record id="olympics_action" model="ir.actions.act_window">
        <field name="name">Olympics</field>
        <field name="res_model">olympics.olympics</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="olympics_event_view_form" model="ir.ui.view">
        <field name="name">olympics.event.view.form</field>
        <field name="model">olympics.event</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_result" string="Open Results" type="object" class="oe_stat_button" invisible="state != 'done'"/>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="olympics_id"/>
                        <field name="datetime_start"/>
                    </group>
                    <!-- <group>
                        <field name="athlete_ids">
                            <list editable="bottom">
                                <field name="name"/>
                                <field name="country_id"/>
                            </list>
                        </field>
                    </group> -->
                </sheet>
            </form>
        </field>
    </record>

    <record id="olympics_event_view_list" model="ir.ui.view">
        <field name="name">olympics.event.view.list</field>
        <field name="model">olympics.event</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="olympics_event_action" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="res_model">olympics.event</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="olympics_result_view_list" model="ir.ui.view">
        <field name="name">olympics.result.view.list</field>
        <field name="model">olympics.result</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="event_id"/>
                <field name="athlete_id"/>
                <field name="position"/>
            </list>
        </field>
    </record>

    <record id="olympics_result_action" model="ir.actions.act_window">
        <field name="name">Results</field>
        <field name="res_model">olympics.result</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
